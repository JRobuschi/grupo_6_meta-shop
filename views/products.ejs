Â«<!DOCTYPE html>
<html lang="es">
    <head>
    <%- include('./partials/head.ejs') %>
    <%- include('./partials/descriptionproductscss.ejs') %>
</head>
<body>
	<!-- Header -->
	<%- include('./partials/headerNavbar.ejs') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div>
       
		<!-- product detail -->
		<div class="categorias">
			<div>
			<img src="/images/cloud-storage.jpg" alt="ALMACENAMIENTO" itemprop="image">
			<div class="title"><a href="/products/create">AGREGAR PRODUCTO</a></div>
			</div>
	
	
</div>
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
			<%  productsArray.forEach(product => { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/<%= product.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= product.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$<%= product.pdtPrice %> </h2>
							<% if (product.discount) { %>
							<span> <%= product.discount %> OFF</span>
							<% } %>
							<p><%= product.pdtName %></p>
							
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
		<% }) %>
		</div>
		
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>