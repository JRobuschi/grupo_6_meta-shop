<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/addProductcss.ejs') %>
</head>

<body>
    <header>
        <section>
    <%- include('../partials/headerNavbar.ejs') %>
</section>
</header>
<main class="main">
    
<div class="container" style="margin-top: 40px;">
<div class="row">
    <div class="col-md-3">
        <h2>hola <%= User.nombre %>  </h2>
        <!-- <img src="/images/usuarios/<%= User.avatar %> "style="width:400px"> -->
        <br>
        <br>
        <div class="alert alert-success"><%= User.email %> </div>
    </div>
</div>

<form method="POST" action="/users/update/<%= User.id %>" enctype="multipart/form-data">
    <div class="user">
       <h4 class="page-banner-add">Editar  Usuario</h4>
       <br>
       <div class="parts">     
           <label>Nombre</label>
           <input type="text" name="nombre" id="nombre" value="<%= User.nombre %>">
       </div> 
       <div class="parts"> 
           <label>Apellido</label>
           <input type="text" name="apellido" id="apellido" value="<%= User.apellido %>">
       </div> 
       <div class="email">
       <label for="email">Tu email</label>
       <input type="email" id="email" name="email" value="<%= User.email %>"> 
       </div> 

       <div class="parts"> <!--multer image archivo-->
           <label for="image">Imagen de Perfil</label>
            <input  type="file" name="image" id="image" placeholder="Buscar">
       </div>

       <div class="buttons">
           <button class="submit" type="submit"> Enviar</button>
           
                      
    </div>
    </div>
   </form>

  
</main>




</body>

