<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/addProductcss.ejs') %>
</head>

<body>
    <header>
        <section>
            <%- include('../partials/headerNavbar.ejs') %>
        </section>
    </header>
    <main class="main">
                <div class="div-user">
                    <img src='<%= User.image %>' style="width: 10vw; aspect-ratio: 1;object-fit: cover;border-radius: 999px;">
                    <div class="userMail">
                        <h2 style="margin: 0;"><%= User.nombre %></h2>
                        <h3 style="margin: 0;"><%= User.email %></h2>
                    </div>
                </div>
            
            <form method="POST" action="/users/<%= User.idUser %>" class="formulario-perfil" enctype="multipart/form-data">
                <div class="user">
                    <h4 style="display: inline-block; padding: 20px;">Editar Usuario</h4>
                    <br>
                    <div class="parts">
                        <label>Nombre</label>
                        <input type="text" name="nombre" id="nombre" value="<%= User.nombre %>">
                    </div>
                    <div class="parts">
                        <label>Apellido</label>
                        <input type="text" name="apellido" id="apellido" value="<%= User.apellido %>">
                    </div>
                    <div class="email">
                        <label for="email">Tu email</label>
                        <input disabled="disabled" type="email" id="email" name="email" value="<%= User.email %>">
                        <!--<input disabled="disabled" id="price_from" value="price from ">-->
                    </div>

                    <div class="parts">
                        <!--multer image archivo-->
                        <label for="image">Imagen de Perfil</label>
                        <input type="file" name="image" id="image" placeholder="Buscar" >
                        
                    </div>

                    <div class="buttons">
                        <button class="submit" type="submit"> Enviar</button>
                    </div>

                </div>
            </form>


    </main>




</body>

<%- include('../partials/footer.ejs') %>

</html>