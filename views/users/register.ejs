<!DOCTYPE html>
<html lang="en">

<head>

  <%- include('../partials/head.ejs') %>
    <%- include('../partials/logincss.ejs') %>

</head>

<body>
  <script src="/js/jsFrontCreateUser.js"></script>

  <div class="volver">
    <a href="/"><strong>Volver</strong></a>
  </div>

  <div class="container1">
    <div class="signUp">
      <form action="/users/register" method="POST" enctype="multipart/form-data" class="userRegister">
        <h1>Crear cuenta</h1>
        <div class="errores">
          <ul></ul>
      </div>
        <div style="text-align: center;">
          <label for="nombre"></label>
          <input type="text" placeholder="Ingrese su nombre aquí" name="nombre"
            class="tagNombre"
            value="<%= locals.oldData ? oldData.nombre : null %>"> <!--aca se carga la data de errores para locals y oldata-->
          <% if (locals.errors && errors.nombre) { %>
            <div class="text-danger">
              <%= errors.nombre.msg %>
            </div>
            <% } %>
        </div>

        <div style="text-align: center;">
          <input type="text" placeholder="Ingrese su apellido aquí" name="apellido"
            class="tagApellido"
            value="<%= locals.oldData ? oldData.apellido : null %>">
          <!-- <% if (locals.errors && errors.apellido) { %>
            <div class="text-danger">
              <%= errors.apellido.msg %>
            </div>
            <% } %> -->
        </div>

        <div style="text-align: center;">
          <label for="email"></label>
          <input type="email" placeholder="Ingrese su mail aquí" name="email"
            class="tagEmail"
            value="<%= locals.oldData ? oldData.email : null %> ">
          <!-- <% if (locals.errors && errors.email) { %>
            <div class="text-danger">
              <%= errors.email.msg %>
            </div>
            <% } %> -->
        </div>

        <div style="text-align: center;">
          <label for="password"></label>
          <% if (locals.errors && errors.password) { %>
            <div class="text-danger">
               <%= errors.password.msg %>
            
            <% } %> 
              <input class="form-control" type="password" name="password" placeholder="Ingrese su contraseña aquí">
        </div>

       
        
        <div class="parts">
          <label for="image"></label>
          <input type="file" placeholder="image" id="image" class="form-control" name="image">
          <!-- <% if (locals.errors && errors.usuarios) { %>
            <div class="text-danger">
              <%= errors.usuarios.msg %>
            </div>
            <% } %> -->
        </div>

        <div style="text-align: center;">
          <button type="submit" class="btn1">Registrar</button>
        </div>
      </form>
    </div>
  </div>
  </form>
  </div>
</body>

</html>