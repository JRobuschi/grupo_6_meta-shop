<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
    <%- include('../partials/addProductcss.ejs') %>
</head>

<body>
    <header>
        <section>
    <%- include('../partials/headerNavbar.ejs') %>
        </section>
    </header>
<main class="main">
    

    <form method="POST" action="/products" enctype="multipart/form-data" class="productCreate">
     <div class="newProducts">
        <h4 class="page-banner-add">Agregar un Producto</h4>
        <br>
        <div class="errores">
            <ul></ul>
        </div>
        <div class="parts">     
            <label>Nombre del Producto</label>
            <input type="text" name="pdtName" id="pdtName" class="form-input-name" required>
        </div> 
        <div class="parts"> 
            <label>Descripcion</label>
            <input type="text" name="pdtDescription" id="pdtDescription" class="form-input-description" required>
        </div> 
        <div class="categori" class="parts"> 
            <label>Categoria</label>
             <select name="pdtCategori" class="categoriOptions" id="pdtCategori" required>
            <option value="1">Seleccionar categoria</option> 
            <option value="2">Mineria</option> 
            <option value="3">Almacenamiento</option>
            <option value="4">Monitores</option> 
            <option value="5">Metaverso</option>
            
         </select>
        </div> 
       
       
        <div class="parts"> 
            <label>Precio</label>
            <input type="text" name="pdtPrice" id="pdtPrice" required>
        </div> 

        <div class="parts"> <!--multer image archivo-->
            <label for="image">Imagen del Producto</label>
             <input  type="file" name="image" id="image" placeholder="Buscar" required>
        </div>

        

        <div class="col-12">
            <form action="/products/" method="POST">
            <button type="submit" class="buy-now-button">Guardar producto</button>
            </form>
        </div>
     </div>
	 
    </form>
	<script src="/public/js/jsFrontCreatePdt.js"></script>
</main>




</body>

<%- include('../partials/footer.ejs') %>

</html>